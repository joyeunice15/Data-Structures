#include <iostream>
using namespace std;
void bubbleSort(int arr[], int n) {
    for (int i = 0; i < n ; ++i) {
        for (int j = i+1; j <n ; ++j) {
            if (arr[i] > arr[j]) {
                int temp = arr[i];
                arr[i] = arr[j];
                arr[j] = temp;
            }
        }
    }
}

int minimumSumOfProducts(int arr[], int n) {
    bubbleSort(arr, n);

    int minSum = 0;
    cout<<"sorted array is:";
    for (int i = 0; i < n / 2; ++i) {
        minSum += arr[i] * arr[n - 1 - i];
        cout<<" "<<arr[n-1-i]<<" "<<arr[i];
    }

    return minSum;
}

int main() {
    int arr[] = {9,2,8,4,5,7,6,0};
    int n = sizeof(arr) / sizeof(arr[0]);

    int minSum = minimumSumOfProducts(arr, n);

    cout << endl<<"Minimum sum of the product of consecutive pair elements: " << minSum << endl;

    return 0;
}

